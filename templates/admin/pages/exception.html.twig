{% extends "admin/layout/pagelayout.html.twig" %}

{% block content %}
<h2>{{ 'Exception occured'|trans }}</h2>

<div class="alert alert-danger has-error">
	<p class="help-block">{{ message|nofilter }}</p>
	{% if code is not empty and code != 0 %}
	<p class="help-block">Code : {{ code }}</p>
	{% endif %}
</div>

{% if app.user and is_granted('ROLE_ADMIN') %}
<div class="alert alert-danger has-error">
<span class="help-block">
{{ stacktrace|nofilter }}
</span>
</div>

{% endif %}

{% endblock %}

{% block scripts %}
{{ parent() }}
<script type="text/javascript">
$(function(){
	jQuery('.alert').show();
});
</script>

{% endblock %}

