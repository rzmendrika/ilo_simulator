{% macro row(context, fieldset, fieldContainerClass, fieldLabelClass, fieldGroupClass, fieldClass) %}

{% import "base/macros/form.html.twig" as form %}

{% set step = context.step %}
{% set simu = step.simulator %}
{%- for field in fieldset.fields -%}
	{%- if field.displayable or (step.dynamic and context.script == 1) or (simu.dynamic and step.id == 0) -%}
		{% set id = field.data %}
		{% set label = field.label %}
		{% set data = simu.dataById(id) %}
		{% set type = data.type %}
		{% set name = data.name %}
		{% set value = data.value %}
		{% set plainValue = data.plainValue %}
		{% set prompt = field.prompt ? field.prompt : '---------' %}
		{% set widget = field.widget ? ' data-widget="' ~ field.widget ~ '"' : '' %}
		{%- if type == 'money' or type == 'percent' -%}
		{% set value = value|replace({".": simu.decimalPoint}) %}
		{% elseif type == 'number' %}
		{% elseif type == 'integer' %}
		{% set type = 'number' %}
		{% endif %}
		<div id="{{ name }}-container" data-type="{{ type }}"{%- if type == 'choice' and field.usage == 'input' and field.expanded == 1 %} data-expanded="true"{% endif %} data-field-position="{{ field.position }}" class="field-container {{ fieldContainerClass }}{%- if not(loop.first) and field.newline %} new-line{% endif %}{%- if field.underlabel == 1 %} underlabel{% endif %}">			
		{%- if field.preNote and field.preNote.displayable -%}
		<div class="pre-note">{{ form.paragraphs(field.preNote.text) }}</div>
		{% endif %}
		{%- if field.usage == 'input' -%}
		{%- if label == '' -%}
		<span class="label">{% if field.required or field.visibleRequired %} * {% endif %}</span>
		{% elseif (type == 'choice' and field.expanded == 1) or type == 'multichoice' %}
		<label id="{{ name }}-label" class="{{ fieldLabelClass }}">{% if field.required or field.visibleRequired %}<span class="asterisk"> * </span>{% endif %}{{ label|fnref }}{% if field.required or field.visibleRequired %}<span class="asterisk"> * </span>{% endif %}{% if field.hasColon %} : {% endif %}</label>
		{% else %}
		<label id="{{ name }}-label" class="{{ fieldLabelClass }}" for="{{ name }}">{% if field.required or field.visibleRequired %}<span class="asterisk"> * </span>{% endif %}{{ label|fnref }}{% if field.required or field.visibleRequired %}<span class="asterisk"> * </span>{% endif %}{% if field.hasColon %} : {% endif %}</label>
		{% endif %}
		<div class="{{ fieldGroupClass }}">
		{%- if type == 'money' and simu.symbolPosition == 'before' %}<span id="{{ name }}-money-symbol" class="money-symbol before">{{ simu.moneySymbol }}</span> {% endif %}
		{%- if type == 'choice' -%}
		{%- if field.expanded == 1 -%}
			<fieldset id="{{ name }}">
				<legend class="sr-only">{{ label|fnref }}</legend>
				{%- for choice in data.choices -%}
				{%- if choice.class == 'ChoiceGroup' -%}
				{%- for gchoice in choice.choices -%}
				{%- if gchoice.selected -%}
				<label class="choice{%- if gchoice.value == value %} checked{% endif %}" for="{{ name }}_{{ gchoice.id }}"><input id="{{ name }}_{{ gchoice.id }}" type="radio" name="{{ name }}" value="{{ gchoice.value }}"{%- if gchoice.value == value %} checked="checked"{% endif %}{{ widget|jscode }} />{{ gchoice.label|fnref }}</label>
				{% endif %}
				{% endfor %}
				{%- elseif choice.class == 'Choice' and choice.selected -%}
				<label class="choice{%- if choice.value == value %} checked{% endif %}" for="{{ name }}_{{ choice.id }}"><input id="{{ name }}_{{ choice.id }}" type="radio" name="{{ name }}" value="{{ choice.value }}"{%- if choice.value == value %} checked="checked"{% endif %}{{ widget|jscode }} />{{ choice.label|fnref }}</label>
				{% endif %}
				{% endfor %}
			</fieldset>
		{% else %}
			<select class="{{ fieldClass }}" id="{{ name }}" name="{{ name }}"{{ widget|jscode }}{% if field.required %} aria-required="true"{% endif %}>
			{%- if not(data.default) -%}<option id="{{ name }}_none" value="">{{ prompt }}</option>{% endif %}
			{%- for choice in data.choices -%}
			{%- if choice.class == 'ChoiceGroup' -%}
			<optgroup label="{{ choice.label }}">
			{%- for gchoice in choice.choices -%}
				{%- if gchoice.selected or (step.dynamic and context.script == 1) or (simu.dynamic and step.id == 0) -%}
				<option id="{{ name }}_{{ gchoice.id }}" value="{{ gchoice.value }}"{%- if gchoice.value == value %} selected="selected"{% endif %}>{{ gchoice.label|nofnref }}</option>
				{% endif %}
			{% endfor %}
			</optgroup>
			{%- elseif choice.class == 'Choice' and (choice.selected or (step.dynamic and context.script == 1) or (simu.dynamic and step.id == 0)) -%}
			<option id="{{ name }}_{{ choice.id }}" value="{{ choice.value }}"{%- if choice.value == value %} selected="selected"{% endif %}>{{ choice.label|nofnref }}</option>
			{% endif %}
			{% endfor %}
			</select>
		{% endif %}
	{% elseif type == 'multichoice' %}
		<fieldset id="{{ name }}">
			<legend class="sr-only">{{ label|fnref }}</legend>
			{%- for choice in data.choices -%}
			{%- if choice.class == 'ChoiceGroup' -%}
			{%- for gchoice in choice.choices -%}
			{%- if gchoice.selected -%}
			<label class="choice" for="{{ name }}_{{ gchoice.id }}_{{ loop.index }}"><input id="{{ name }}_{{ gchoice.id }}_{{ loop.index }}" type="checkbox" name="{{ name }}[]"{{ widget|jscode }} value="{{ gchoice.value }}"{%- if gchoice.value in value %} checked="checked"{% endif %} />{{ gchoice.label|fnref }}</label>
			{% endif %}
			{% endfor %}
			{%- elseif choice.class == 'Choice' and choice.selected -%}
			<label class="choice" for="{{ name }}_{{ choice.id }}_{{ loop.index }}"><input id="{{ name }}_{{ choice.id }}_{{ loop.index }}" type="checkbox" name="{{ name }}[]"{{ widget|jscode }} value="{{ choice.value }}"{%- if choice.value in value %} checked="checked"{% endif %} />{{ choice.label|fnref }}</label>
			{% endif %}
			{% endfor %}
		</fieldset>
	{% elseif type == 'array' %}
		<div id="{{ name }}">
		{{ plainValue }}
		</div>
	{% elseif type == 'boolean' %}
		<input class="{{ fieldClass }}" type="checkbox" id="{{ name }}"{{ widget|jscode }} name="{{ name }}" value="true"{%- if value == 'true' %} checked="checked"{% endif %}{% if field.required %} aria-required="true"{% endif %} />
	{% elseif type == 'date' %}
		{%- if context.script == 0 %}
		<input type="date" id="{{ name }}" name="{{ name }}"{{ widget|jscode }} value="{{ value }}" class="date {{ fieldClass }}{%- if data.error %} has-error{%- elseif data.warning %} has-warning{% endif %}"{%- if data.error %} aria-invalid="true"{% endif %} placeholder="{{ simu.dateFormat|trans }}" title="{{ 'format: %format%'|trans({ '%format%': simu.dateFormat|trans }) }}"{% if field.required %} aria-required="true"{% endif %}/>
		{% else %}
		<input type="text" aria-describedby="{{ name }}-aria-description" id="{{ name }}" name="{{ name }}"{{ widget|jscode }} value="{{ value }}" class="date {{ fieldClass }}{%- if data.error %} has-error{%- elseif data.warning %} has-warning{% endif %}"{%- if data.error %} aria-invalid="true"{% endif %} placeholder="{{ simu.dateFormat|trans }}"{% if field.required %} aria-required="true"{% endif %}{%- if data.min is not empty %} data-min="{{ data.min }}"{% endif %}{%- if data.max is not empty %} data-max="{{ data.max }}"{% endif %} />
		<span id="{{ name }}-aria-description" class="sr-only">{{ 'Enter the date as %dateformat% or tab to activate the date selector to the right of this input field'|trans({ '%dateformat%': simu.dateFormat|trans }) }}</span>
		{% endif %}
	{% elseif type == 'day' %}
		{% set min = data.min ?: 01 %}
		{% set max = data.max ?: 31 %}
		<select id="{{ name }}" name="{{ name }}"{{ widget|jscode }} class="{{ fieldClass }}{%- if data.error %} has-error{%- elseif data.warning %} has-warning{% endif %}"{%- if data.error %} aria-invalid="true"{% endif %}{% if field.required %} aria-required="true"{% endif %}>
		{%- if not(data.default) -%}<option value="00">--</option>{% endif %}
		{% for i in min..max %}
		<option value="{{ i }}"{%- if i == value %} selected="selected"{% endif %}>{{ i }}</option>
		{% endfor %}
		</select>
	{% elseif type == 'month' %}
		{% set min = data.min|default(01) %}
		{% set max = data.max|default(12) %}
		<select id="{{ name }}" name="{{ name }}"{{ widget|jscode }} class="{{ fieldClass }}{%- if data.error %} has-error{%- elseif data.warning %} has-warning{% endif %}"{%- if data.error %} aria-invalid="true"{% endif %}{% if field.required %} aria-required="true"{% endif %}>
		{%- if not(data.default) -%}<option value="">{{ prompt }}</option>{% endif %}
		{% for i in min..max %}
		<option value="{{ i }}"{%- if value == i %} selected="selected"{% endif %}>{{ form.monthname(i)|trans }}</option>
		{% endfor %}
		</select>
	{% elseif type == 'year' %}
		{% set min = data.min|default(1964) %}
		{% set max = data.max|default(min + 100) %}
		<select id="{{ name }}" name="{{ name }}"{{ widget|jscode }} class="{{ fieldClass }}{%- if data.error %} has-error{%- elseif data.warning %} has-warning{% endif %}"{%- if data.error %} aria-invalid="true"{% endif %}{% if field.required %} aria-required="true"{% endif %}>
		{%- if not(data.default) -%}<option value="">----</option>{% endif %}
		{% for i in min..max %}
		<option value="{{ i }}"{%- if i == value %} selected="selected"{% endif %}>{{ i }}</option>
		{% endfor %}
		</select>
	{% elseif type == 'region' %}
		<select id="{{ name }}" name="{{ name }}"{{ widget|jscode }} class="{{ fieldClass }}{%- if data.error %} has-error{%- elseif data.warning %} has-warning{% endif %}"{%- if data.error %} aria-invalid="true"{% endif %}{% if field.required %} aria-required="true"{% endif %}>
		{{ form.regions() }}
		</select>
	{% elseif type == 'department' %}
		<select id="{{ name }}" name="{{ name }}"{{ widget|jscode }} class="{{ fieldClass }}{%- if data.error %} has-error{%- elseif data.warning %} has-warning{% endif %}"{%- if data.error %} aria-invalid="true"{% endif %}{% if field.required %} aria-required="true"{% endif %}>
		{{ form.departments(value, prompt) }}
		</select>
	{% elseif type == 'textarea' %}
		<textarea id="{{ name }}" name="{{ name }}"{{ widget|jscode }} class="{{ fieldClass }}{%- if data.error %} has-error{%- elseif data.warning %} has-warning{% endif %}"{%- if data.min is not empty %} minlength="{{ data.min }}"{% endif %}{%- if data.max is not empty %} maxlength="{{ data.max }}"{% endif %}{%- if data.error %} aria-invalid="true"{% endif %}{% if field.required %} aria-required="true"{% endif %}>{{ value }}</textarea>
	{% elseif type == 'number' and data.type == 'integer' %}
		<input type="{{ type }}" id="{{ name }}" name="{{ name }}"{{ widget|jscode }} value="{{ value }}"{%- if data.min is not empty %} min="{{ data.min }}"{% endif %}{%- if data.max is not empty %} max="{{ data.max }}"{% endif %}{%- if data.error -%} class="has-error" aria-invalid="true"{%- elseif data.warning %} class="has-warning"{% endif %} title="{{ 'format: %format%'|trans({ '%format%': 'numbers only'|trans }) }}"{% if field.required %} aria-required="true"{% endif %}/>
	{% elseif type == 'number' %}
		<input type="{{ type }}" step="any" id="{{ name }}" name="{{ name }}"{{ widget|jscode }} value="{{ value }}"{%- if data.min is not empty %} min="{{ data.min }}"{% endif %}{%- if data.max is not empty %} max="{{ data.max }}"{% endif %}{%- if data.error -%} class="has-error" aria-invalid="true"{%- elseif data.warning %} class="has-warning"{% endif %} title="{{ 'format: %format%'|trans({ '%format%': 'number'|trans }) }}"{% if field.required %} aria-required="true"{% endif %}/>
	{% elseif type == 'percent' %}
		<input type="text" id="{{ name }}" name="{{ name }}"{{ widget|jscode }} value="{{ value }}" aria-describedby="{{ name }}-percent-symbol"{%- if data.min is not empty %} min="{{ data.min }}"{% endif %}{%- if data.max is not empty %} max="{{ data.max }}"{% endif %}{%- if data.error -%} class="has-error" aria-invalid="true"{%- elseif data.warning %} class="has-warning"{% endif %}  title="{{ 'format: %format%'|trans({ '%format%': 'percentage'|trans }) }}"{% if field.required %} aria-required="true"{% endif %}/>
	{% elseif type == 'money' %}
		<input type="{{ type }}" id="{{ name }}" name="{{ name }}"{{ widget|jscode }} value="{{ value }}" aria-describedby="{{ name }}-money-symbol"{%- if data.error -%} class="has-error" aria-invalid="true"{%- elseif data.warning %} class="has-warning"{% endif %} title="{{ 'format: %format%'|trans({ '%format%': 'amount in %symbol%'|trans({ '%symbol%': simu.moneySymbol }) }) }}"{% if field.required %} aria-required="true"{% endif %} />
	{% else %}
		<input type="{{ type }}" id="{{ name }}" name="{{ name }}"{{ widget|jscode }} value="{{ value }}"{%- if data.min is not empty %} minlength="{{ data.min }}"{% endif %}{%- if data.max is not empty %} maxlength="{{ data.max }}"{% endif %}{%- if data.pattern is not empty %} pattern="{{ data.pattern }}"{% endif %}{%- if data.error -%} class="has-error" aria-invalid="true"{%- elseif data.warning %} class="has-warning"{% endif %}{% if field.required %} aria-required="true"{% endif %} />
	{% endif %}
	</div>
	{%- if type == 'money' and simu.symbolPosition == 'after' %}
	<span id="{{ name }}-money-symbol" class="money-symbol after">{{ simu.moneySymbol }}</span>
	{% endif %}
	{%- if type == 'percent' -%}<span id="{{ name }}-percent-symbol" class="percent-symbol">%</span>{%- endif %}
		{%- if data.unit -%}<span class="unit"> {{ data.unit }}</span>{%- endif -%}
	{% elseif field.usage == 'output' %}
	{%- if label is not empty -%}
	{%- if field.emphasized -%}
	<span id="{{ name }}-label" class="label emphasized">{{ label|fnref }}{% if field.hasColon %} : {% endif %}</span>
	{% else %}
	<span id="{{ name }}-label" class="label">{{ label|fnref }}{% if field.hasColon %} : {% endif %}</span>
	{%- endif -%}
	{%- endif -%}
	{%- if type == 'table' -%}
	<table id="{{ data.table.id }}" summary="{{ data.table.description }}">
		<caption>{{ data.table.label|fnref }}</caption>
		<thead>
			<tr>
			{%- for column in data.table.columns -%}
				<th id="{{ column.id }}" abbr="{{ column.name }}" scope="col">{{ column.label|fnref }}</th>
			{% endfor %}
			<tr>
		</thead>
		<tbody>
		{%- for row in data.table.rows -%}
			<tr>
			{%- for cell in row.cells -%}
				<td headers="{{ cell.column.id }}">{{ cell|fnref }}</td>
			{% endfor %}
			</tr>
		{% endfor %}
		</tbody>
	</table>
	{%- else -%}
	{% apply spaceless %}
	{%- if type == 'money' and simu.symbolPosition == 'before' %}
		<span id="{{ name }}-money-symbol" class="money-symbol before{%- if field.emphasized %} emphasized{%- endif %}">{{ simu.moneySymbol }}&#xA0;</span>
	{%- endif -%}
	<span id="{{ name }}" class="output{%- if field.emphasized %} emphasized{%- endif -%}">
	{%- if type == 'choice' -%}
		{%- for choice in data.choices -%}
		{%- if choice.class == 'ChoiceGroup' -%}
		{%- for gchoice in choice.choices %}
		{% if gchoice.value == value -%}{{- gchoice.label|trim|nofnref -}}{% endif %}
		{%- endfor -%}
		{%- elseif choice.class == 'Choice' and choice.value == value -%}
		{{- choice.label|trim|nofnref -}}
		{%- endif -%}
		{%- endfor -%}
	{%- elseif type == 'multichoice' -%}
		{%- for choice in data.choices -%}
		{%- if choice.class == 'ChoiceGroup' -%}
		{%- for gchoice in choice.choices %} 
		{% if gchoice.value in value -%}<span>{{- gchoice.label|trim|nofnref -}}</span>{% endif %}
		{%- endfor -%}
		{%- elseif choice.class == 'Choice' and choice.value in value -%}
		<span>{{- choice.label|trim|nofnref -}}</span>
		{%- endif -%}
		{%- endfor -%}
	{%- elseif type == 'array' -%}
		{{ plainValue }}
	{%- elseif type == 'boolean' -%}
		{{ value == 'true' ? 'oui' : 'non' }}
	{%- elseif type == 'month' -%}
		{{ form.monthname(value)|trans }}
	{%- elseif type == 'department' -%}
		{{ form.departmentname(value) }}
	{%- elseif type == 'money' or type == 'percent' or type == 'number' -%}
		{%- if data.value == '' -%}
		{%- else -%}
		{{ plainValue }}
		{%- endif -%}
	{%- elseif type == 'text' -%}
		{{ form.textoutput(value) }}
	{%- else -%}
		{{ value }}
	{%- endif -%}
		</span>
	{%- if type == 'money' and simu.symbolPosition == 'after' %}
		<span id="{{ name }}-money-symbol" class="money-symbol after{%- if field.emphasized %} emphasized{%- endif %}">&#xA0;{{ simu.moneySymbol }}</span>
	{%- endif -%}
	{%- if type == 'percent' -%}<span id="{{ name }}-percent-symbol" class="percent-symbol{%- if field.emphasized %} emphasized{%- endif -%}">%</span>{%- endif -%}
	{%- if data.unit -%}<span class="unit{%- if field.emphasized %} emphasized{%- endif -%}"> {{ data.unit }}</span>{%- endif -%}
	{% endapply %}
	{%- endif %}
	{% endif %}
	{%- if field.hasHelp -%}
		<button type="button" href="#help-{{ name }}" data-toggle="collapse" data-target="#help-{{ name }}" aria-controls="help-{{ name }}" class="btn btn-help collapsed" title="aide sur {{ label|nofnref }}"><span class="icon icon-help" aria-hidden="true"></span><span class="blank">Aide</span></button>
	{% endif %}
		{%- if (step.dynamic or (simu.dynamic and step.id == 0)) and field.usage == 'input' -%}
		<div id="{{ name }}-field-error" class="field-error{%- if data.error %} has-error{%- elseif data.warning %} has-warning{%- else %} hidden{%- endif %}">{%- if data.error -%}{%- for errorMessage in data.errorMessages -%}<p>{{ errorMessage }}</p>{%- endfor -%}{%- endif -%}</div>
		{%- else -%}
		{%- if data.error -%}<div id="{{ name }}-field-error" class="field-error has-error" aria-live="assertive">{%- for errorMessage in data.errorMessages -%}<p>{{ errorMessage }}</p>{%- endfor -%}</div>{%- elseif data.warning -%}<div id="{{ name }}-field-error" class="field-error has-warning" aria-live="assertive">{%- for warningMessage in data.warningMessages -%}<p>{{ warningMessage }}</p>{%- endfor -%}</div>{% endif %}
		{% endif %}
		{%- if field.explanation is not empty -%}
		<span id="{{ name }}-explanation" class="explanation">{{ field.explanation }}</span>
		{% endif %}
		{%- if field.postNote and field.postNote.displayable -%}
		<div class="post-note">{{ form.paragraphs(field.postNote.text) }}</div>
		{% endif %}
		{%- if field.hasHelp %}
		<div class="collapse help-panel" id="help-{{ name }}">
			<dl>
				<dt>{{ label|fnref }}</dt>
				<dd>
					{{ data.description|htmlraw }}
				</dd>
			</dl>
		</div>
		{% endif %}
		</div>
	{% endif %}
{% endfor %}

{% endmacro %}
