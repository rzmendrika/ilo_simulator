{% macro row(context, fieldset, fieldsetContainerClass, fieldContainerClass, fieldGroupClass, fieldClass) %}

{% import "base/macros/form.html.twig" as form %}

{% set step = context.step %}
{% set simu = step.simulator %}
			<table class="grid" id="{{ step.name }}-panel-{{ fieldset.panel.id }}-grid-{{ fieldset.id }}">
				<thead class="grid-header">
					<tr>
						<th scope="col" id="{{ step.name }}-panel-{{ fieldset.panel.id }}-grid-{{ fieldset.id }}-col0">&nbsp;</th>
						{%- for column in fieldset.columns -%}
						<th scope="col" id="{{ step.name }}-panel-{{ fieldset.panel.id }}-grid-{{ fieldset.id }}-col{{ loop.index }}">{{ column.label|fnref }}</th>
						{% endfor %}
					</tr>
				</thead>
				<tbody>
				{%- for row in fieldset.fields -%}
				{% set gid = row.dataGroup %}
				{% set datagroup = simu.dataGroupById(gid) %}
				<tr id="{{ step.name }}-panel-{{ fieldset.panel.id }}-fieldset-{{ fieldset.id }}-fieldrow-{{ row.id }}"{%- if row.emphasize %} class="emphasize"{% endif %}>
					<th scope="row" rowspan="2" id="{{ step.name }}-panel-{{ fieldset.panel.id }}-fieldset-{{ fieldset.id }}-fieldrow-{{ row.id }}-head" data-label="{{ row.label|nofnref }}">{{ row.label|fnref }}</th>
					{%- for field in row.fields -%}
					{%- if field.displayable or (step.dynamic and context.script == 1) or (simu.dynamic and step.id == 0) -%}
					{% set id = field.data %}
					{% set data = simu.dataById(id) %}
					{% set type = data.type %}
					{% set name = data.name %}
					{% set value = data.value %}
					{% set plainValue = data.plainValue %}
					{% set prompt = field.prompt ? field.prompt : '---------' %}
					{% set widget = field.widget ? ' data-widget="' ~ field.widget ~ '"' : '' %}
					{%- if type == 'money' or type == 'percent' -%}
						{% set value = value|replace({".": simu.decimalPoint}) %}
					{% elseif type == 'number' %}
					{% elseif type == 'integer' %}
						{% set type = 'number' %}
					{% endif %}
					{%- if field.usage == 'input' -%}
					<td headers="{{ step.name }}-panel-{{ fieldset.panel.id }}-grid-{{ fieldset.id }}-col{{ loop.index }} {{ step.name }}-panel-{{ fieldset.panel.id }}-fieldset-{{ fieldset.id }}-fieldrow-{{ row.id }}-head" data-label="{{ fieldset.columns[loop.index0].label|nofnref }}">
						<div id="{{ name }}-container" data-type="{{ type }}"{%- if type == 'choice' and field.usage == 'input' and field.expanded == 1 %} data-expanded="true"{% endif %} data-field-position="{{ field.position }}" class="field-container {{ fieldContainerClass }}">
						{%- if type == 'money' and simu.symbolPosition == 'before' %}<span id="{{ name }}-money-symbol" class="money-symbol before">{{ simu.moneySymbol }}</span> {% endif %}
						<div class="{{ fieldGroupClass }}">
							{%- if type == 'choice' -%}
								{%- if field.expanded == 1 -%}
								<div id="{{ name }}">
								{%- for choice in data.choices -%}
									{%- if choice.class == 'ChoiceGroup' -%}
									{%- for gchoice in choice.choices -%}
										{%- if gchoice.selected -%}
										<label class="choice" for="{{ name }}_{{ gchoice.id }}"><input id="{{ name }}_{{ gchoice.id }}" type="radio" name="{{ name }}" value="{{ gchoice.value }}"{%- if gchoice.value == value %} checked="checked"{% endif %} />{{ gchoice.label|fnref }}</label>
										{% endif %}
									{% endfor %}
									{%- elseif choice.class == 'Choice' and choice.selected -%}
									<label class="choice" for="{{ name }}_{{ choice.id }}"><input id="{{ name }}_{{ choice.id }}" type="radio" name="{{ name }}" value="{{ choice.value }}"{%- if choice.value == value %} checked="checked"{% endif %} />{{ choice.label|fnref }}</label>
									{% endif %}
								{% endfor %}
								</div>
								{% else %}
									<select aria-label="{{ row.label|nofnref }} {{ fieldset.columns[loop.index0].label|nofnref }}" class="{{ fieldClass }}" id="{{ name }}" name="{{ name }}"{{ widget|jscode }}{% if field.required %} aria-required="true"{% endif %}>
									{%- if not(data.default) -%}<option id="{{ name }}_none" value="">{{ prompt }}</option>{% endif %}
									{%- for choice in data.choices -%}
										{%- if choice.class == 'ChoiceGroup' -%}
										<optgroup label="{{ choice.label|nofnref }}">
										{%- for gchoice in choice.choices -%}
											{%- if gchoice.selected or (step.dynamic and context.script == 1) or (simu.dynamic and step.id == 0) -%}
											<option id="{{ name }}_{{ gchoice.id }}" value="{{ gchoice.value }}"{%- if gchoice.value == value %} selected="selected"{% endif %}>{{ gchoice.label|nofnref }}</option>
											{% endif %}
										{% endfor %}
										</optgroup>
										{%- elseif choice.class == 'Choice' and (choice.selected  or (step.dynamic and context.script == 1) or (simu.dynamic and step.id == 0)) -%}
										<option id="{{ name }}_{{ choice.id }}" value="{{ choice.value }}"{%- if choice.value == value %} selected="selected"{% endif %}>{{ choice.label|nofnref }}</option>
										{% endif %}
									{% endfor %}
									</select>
								{% endif %}
							{% elseif type == 'multichoice' %}
								<div id="{{ name }}">
								{%- for choice in data.choices -%}
									{%- if choice.class == 'ChoiceGroup' -%}
									{%- for gchoice in choice.choices -%}
										{%- if gchoice.selected -%}
										<label class="choice" for="{{ name }}_{{ gchoice.id }}_{{ loop.index }}"><input id="{{ name }}_{{ gchoice.id }}_{{ loop.index }}" type="checkbox" name="{{ name }}[]" value="{{ gchoice.value }}"{%- if gchoice.value in value %} checked="checked"{% endif %} />{{ gchoice.label|fnref }}</label>
										{% endif %}
									{% endfor %}
									{%- elseif choice.class == 'Choice' and choice.selected -%}
									<label class="choice" for="{{ name }}_{{ choice.id }}_{{ loop.index }}"><input id="{{ name }}_{{ choice.id }}_{{ loop.index }}" type="checkbox" name="{{ name }}[]" value="{{ choice.value }}"{%- if choice.value in value %} checked="checked"{% endif %} />{{ choice.label|fnref }}</label>
									{% endif %}
								{% endfor %}
								</div>
							{% elseif type == 'array' %}
								<div id="{{ name }}">
								{{ plainValue }}
								</div>
							{% elseif type == 'boolean' %}
								<input aria-label="{{ row.label|nofnref }} {{ fieldset.columns[loop.index0].label|nofnref }}" class="{{ fieldClass }}" type="checkbox" id="{{ name }}" name="{{ name }}" value="true"{%- if value == 'true' %} checked="checked"{% endif %}{% if field.required %} aria-required="true"{% endif %} />
							{% elseif type == 'date' %}
								{%- if context.script == 0 %}
								<input type="date" aria-label="{{ row.label|nofnref }} {{ fieldset.columns[loop.index0].label|nofnref }}" id="{{ name }}" name="{{ name }}"{{ widget|jscode }} value="{{ value }}" class="date {{ fieldClass }}{%- if data.error %} has-error{%- elseif data.warning %} has-warning{%- endif %}"{%- if data.error %} aria-invalid="true"{% endif %} placeholder="{{ simu.dateFormat|trans }}" title="{{ 'format: %format%'|trans({ '%format%': simu.dateFormat|trans }) }}"{% if field.required %} aria-required="true"{% endif %} />
								{% else %}
								<input type="text" aria-label="{{ row.label|nofnref }} {{ fieldset.columns[loop.index0].label|nofnref }}" id="{{ name }}" name="{{ name }}"{{ widget|jscode }} value="{{ value }}" class="date {{ fieldClass }}{%- if data.error %} has-error{%- elseif data.warning %} has-warning{%- endif %}"{%- if data.error %} aria-invalid="true"{% endif %} placeholder="{{ simu.dateFormat|trans }}"  title="{{ 'format: %format%'|trans({ '%format%': simu.dateFormat|trans }) }}"{% if field.required %} aria-required="true"{% endif %}{%- if data.min is not empty %} data-min="{{ data.min }}"{% endif %}{%- if data.max is not empty %} data-max="{{ data.max }}"{% endif %} />
								{% endif %}
							{% elseif type == 'day' %}
								{% set min = data.min ?: 01 %}
								{% set max = data.max ?: 31 %}
								<select aria-label="{{ row.label|nofnref }} {{ fieldset.columns[loop.index0].label|nofnref }} : sélectionner le jour dans la liste déroulante" id="{{ name }}" name="{{ name }}"{{ widget|jscode }} class="{{ fieldClass }}{%- if data.error %} has-error{%- elseif data.warning %} has-warning{%- endif %}"{%- if data.error %} aria-invalid="true"{% endif %}{% if field.required %} aria-required="true"{% endif %}>
								{%- if not(data.default) -%}<option value="00">--</option>{% endif %}
								{% for i in min..max %}
								<option value="{{ i }}"{%- if i == value %} selected="selected"{% endif %}>{{ i }}</option>
								{% endfor %}
								</select>
							{% elseif type == 'month' %}
								{% set min = data.min|default(01) %}
								{% set max = data.max|default(12) %}
								<select aria-label="{{ row.label|nofnref }} {{ fieldset.columns[loop.index0].label|nofnref }} : sélectionner le mois dans la liste déroulante" id="{{ name }}" name="{{ name }}"{{ widget|jscode }} class="{{ fieldClass }}{%- if data.error %} has-error{%- elseif data.warning %} has-warning{% endif %}"{%- if data.error %} aria-invalid="true"{% endif %}{% if field.required %} aria-required="true"{% endif %}>
								{%- if not(data.default) -%}<option value="">-------------------</option>{% endif %}
								{% for i in min..max %}
								<option value="{{ i }}"{%- if value == i %} selected="selected"{% endif %}>{{form.monthname(i)|trans }}</option>
								{% endfor %}
								</select>
							{% elseif type == 'year' %}
								{% set min = data.min|default(1964) %}
								{% set max = data.max|default(min + 100) %}
								<select aria-label="{{ row.label|nofnref }} {{ fieldset.columns[loop.index0].label|nofnref }} : sélectionner l'année dans la liste déroulante" id="{{ name }}" name="{{ name }}"{{ widget|jscode }} class="{{ fieldClass }}{%- if data.error %} has-error{%- elseif data.warning %} has-warning{% endif %}"{%- if data.error %} aria-invalid="true"{% endif %}{% if field.required %} aria-required="true"{% endif %}>
								{%- if not(data.default) -%}<option value="">----</option>{% endif %}
								{% for i in min..max %}
								<option value="{{ i }}"{%- if i == value %} selected="selected"{% endif %}>{{ i }}</option>
								{% endfor %}
								</select>
							{% elseif type == 'region' %}
								<select aria-label="{{ row.label|nofnref }} {{ fieldset.columns[loop.index0].label|nofnref }} : sélectionner la région dans la liste déroulante" id="{{ name }}" name="{{ name }}"{{ widget|jscode }} class="{{ fieldClass }}{%- if data.error %} has-error{%- elseif data.warning %} has-warning{%- endif %}"{%- if data.error %} aria-invalid="true"{% endif %}{% if field.required %} aria-required="true"{% endif %}>
								{{form.regions() }}
								</select>
							{% elseif type == 'department' %}
								<select aria-label="{{ row.label|nofnref }} {{ fieldset.columns[loop.index0].label|nofnref }} : sélectionner le département dans la liste déroulante" id="{{ name }}" name="{{ name }}"{{ widget|jscode }} class="{{ fieldClass }}{%- if data.error %} has-error{%- elseif data.warning %} has-warning{%- endif %}"{%- if data.error %} aria-invalid="true"{% endif %}{% if field.required %} aria-required="true"{% endif %}>
								{{form.departments(value, prompt) }}
								</select>
							{% elseif type == 'textarea' %}
							<textarea aria-label="{{ row.label|nofnref }} {{ fieldset.columns[loop.index0].label|nofnref }}" id="{{ name }}" name="{{ name }}"{{ widget|jscode }} class="{{ fieldClass }}{%- if data.error %} has-error{%- elseif data.warning %} has-warning{%- endif %}"{%- if data.min is not empty %} minlength="{{ data.min }}"{% endif %}{%- if data.max is not empty %} maxlength="{{ data.max }}"{% endif %}{%- if data.error %} aria-invalid="true"{% endif %}{% if field.required %} aria-required="true"{% endif %}>{{ value }}</textarea>
							{% elseif type == 'number' and data.type == 'integer' %}
							<input type="{{ type }}" id="{{ name }}" name="{{ name }}"{{ widget|jscode }} value="{{ value }}"{%- if data.min is not empty %} min="{{ data.min }}"{% endif %}{%- if data.max is not empty %} max="{{ data.max }}"{% endif %}{%- if data.error -%} class="has-error" aria-invalid="true"{%- elseif data.warning %} class="has-warning"{% endif %} title="{{ row.label|nofnref }} {{ fieldset.columns[loop.index0].label|nofnref }} - {{ 'format: %format%'|trans({ '%format%': 'numbers only'|trans }) }}"{% if field.required %} aria-required="true"{% endif %}/>
							{% elseif type == 'number' %}
							<input type="{{ type }}" step="any" id="{{ name }}" name="{{ name }}"{{ widget|jscode }} value="{{ value }}"{%- if data.min is not empty %} min="{{ data.min }}"{% endif %}{%- if data.max is not empty %} max="{{ data.max }}"{% endif %}{%- if data.error -%} class="has-error" aria-invalid="true"{%- elseif data.warning %} class="has-warning"{% endif %} title="{{ row.label|nofnref }} {{ fieldset.columns[loop.index0].label|nofnref }} - {{ 'format: %format%'|trans({ '%format%': 'number'|trans }) }}"{% if field.required %} aria-required="true"{% endif %}/>
							{% elseif type == 'percent' %}
							<input type="text" id="{{ name }}" name="{{ name }}"{{ widget|jscode }} value="{{ value }}"{%- if data.min is not empty %} min="{{ data.min }}"{% endif %}{%- if data.max is not empty %} max="{{ data.max }}"{% endif %}{%- if data.error -%} class="has-error" aria-invalid="true"{%- elseif data.warning %} class="has-warning"{% endif %} title="{{ row.label|nofnref }} {{ fieldset.columns[loop.index0].label|nofnref }} - {{ 'format: %format%'|trans({ '%format%': 'percentage'|trans }) }}"{% if field.required %} aria-required="true"{% endif %} />
							{% elseif type == 'money' %}
							<input type="{{ type }}" id="{{ name }}" name="{{ name }}"{{ widget|jscode }} value="{{ value }}"{%- if data.error -%} class="has-error" aria-invalid="true"{%- elseif data.warning %} class="has-warning"{% endif %} title="{{ row.label|nofnref }} {{ fieldset.columns[loop.index0].label|nofnref }} - {{ 'format: %format%'|trans({ '%format%': 'amount in %symbol%'|trans({ '%symbol%': simu.moneySymbol }) }) }}"{% if field.required %} aria-required="true"{% endif %}/>
							{% else %}
							<input type="{{ type }}" aria-label="{{ row.label|nofnref }} {{ fieldset.columns[loop.index0].label|nofnref }}" id="{{ name }}" name="{{ name }}"{{ widget|jscode }} value="{{ value }}"{%- if data.min is not empty %} minlength="{{ data.min }}"{% endif %}{%- if data.max is not empty %} maxlength="{{ data.max }}"{% endif %}{%- if data.pattern is not empty %} pattern="{{ data.pattern }}"{% endif %}{%- if data.error -%} class="has-error" aria-invalid="true"{%- elseif data.warning %} class="has-warning"{% endif %}{% if field.required %} aria-required="true"{% endif %} />
							{% endif %}
						</div>
						{%- if type == 'money' and simu.symbolPosition == 'after' %}
							<span id="{{ name }}-money-symbol" class="money-symbol after">{{ simu.moneySymbol }}</span>
						{% endif %}
						{%- if type == 'percent' -%}<span id="{{ name }}-percent-symbol" class="percent-symbol">%</span>{%- endif %}
						{%- if data.unit -%}<span class="unit"> {{ data.unit }}</span>{%- endif -%}
						</div>
					</td>
					{% else %}
					<td headers="{{ step.name }}-panel-{{ fieldset.panel.id }}-grid-{{ fieldset.id }}-col{{ loop.index }} {{ step.name }}-panel-{{ fieldset.panel.id }}-fieldset-{{ fieldset.id }}-fieldrow-{{ row.id }}-head" data-label="{{ fieldset.columns[loop.index0].label|nofnref }}">
						{% apply spaceless %}
						{%- if type == 'money' and simu.symbolPosition == 'before' %}
							<span id="{{ name }}-money-symbol" class="money-symbol before{%- if field.emphasized %} emphasized{%- endif %}">{{ simu.moneySymbol }}&#xA0;</span>
						{%- endif -%}
						<span id="{{ name }}" data-type="{{ type }}" data-field-position="{{ field.position }}" class="output{%- if field.emphasized %} emphasized{%- endif -%}">
						{%- if type == 'choice' -%}
							{%- for choice in data.choices -%}
							{%- if choice.class == 'ChoiceGroup' -%}
							{%- for gchoice in choice.choices %}
								{% if gchoice.value == value -%}{{- gchoice.label|trim|nofnref -}}{%- endif -%}
							{%- endfor -%}
							{%- elseif choice.class == 'Choice' and choice.value == value -%}
								{{- choice.label|trim|nofnref -}}
							{%- endif -%}
							{%- endfor -%}
						{%- elseif type == 'multichoice' -%}
							{%- for choice in data.choices -%}
							{%- if choice.class == 'ChoiceGroup' -%}
							{%- for gchoice in choice.choices %}
								{%if gchoice.value in value -%}<span>{{- gchoice.label|trim|nofnref -}}</span>{%- endif -%}
							{%- endfor -%}
							{%- elseif choice.class == 'Choice' and choice.value in value -%}
								<span>{{- choice.label|trim|nofnref -}}</span>
							{%- endif -%}
							{%- endfor -%}
						{%- elseif type == 'array' -%}
							{{ plainValue }}
						{%- elseif type == 'boolean' -%}
							{{ value == 'true' ? 'oui' : 'non' }}
						{%- elseif type == 'month' -%}
							{{form.monthname(value)|trans }}
						{%- elseif type == 'department' -%}
							{{form.departmentname(value) }}
						{%- elseif type == 'money' or type == 'percent' or type == 'number' -%}
							{%- if data.value == '' -%}
							{%- else -%}
							{{ plainValue }}
							{%- endif -%}
						{%- elseif type == 'text' -%}
							{{ form.textoutput(value) }}
						{%- else -%}
							{{ value }}
						{%- endif -%}
						</span>
						{%- if type == 'money' and simu.symbolPosition == 'after' %}
							<span id="{{ name }}-money-symbol" class="money-symbol after{%- if field.emphasized %} emphasized{%- endif %}">&#xA0;{{ simu.moneySymbol }}</span>
						{%- endif -%}
						{%- if type == 'percent' -%}<span id="{{ name }}-percent-symbol" class="percent-symbol{%- if field.emphasized %} emphasized{%- endif -%}">%</span>{%- endif -%}
						{%- if data.unit -%}<span class="unit{%- if field.emphasized %} emphasized{%- endif -%}"> {{ data.unit }}</span>{%- endif -%}
						{% endapply %}
					</td>
					{% endif %}
				{% else %}
					<td>&nbsp;</td>
				{% endif %}
				{% endfor %}
				</tr>
				<tr>
					<td colspan="{{ row.fields|length + 1 }}" headers="{{ step.name }}-panel-{{ fieldset.panel.id }}-fieldset-{{ fieldset.id }}-fieldrow-{{ row.id }}-head">
						{%- if (step.dynamic or (simu.dynamic and step.id == 0)) -%}
						<div aria-live="polite" id="{{ datagroup.name }}-error" class="group-error{%- if datagroup.error %} has-error{%- elseif datagroup.warning %} has-warning{%- else %} hidden{%- endif -%}">{%- if datagroup.error -%}{%- for errorMessage in datagroup.errorMessages -%}<p>{{ errorMessage }}</p>{%- endfor -%}{% endif %}</div>
						{%- else -%}
						{%- if datagroup.error -%}<div aria-live="polite" id="{{ datagroup.name }}-error" class="group-error has-error">{%- for errorMessage in datagroup.errorMessages -%}<p>{{ errorMessage }}</p>{%- endfor -%}</div>{%- elseif datagroup.warning -%}<div aria-live="polite" id="{{ datagroup.name }}-error" class="group-error has-warning">{%- for warningMessage in datagroup.warningMessages -%}<p>{{ warningMessage }}</p>{%- endfor -%}</div>{% endif %}
						{% endif %}
					</td>
				</tr>
				{% endfor %}
				</tbody>
			</table>

{% endmacro %}
